@model Product

@{
    ViewData["Title"] = "Dodaj nowy produkt";
}

<h2>@ViewData["Title"]</h2>
@Html.ValidationSummary(true)

<form asp-action="Create" method="post" class="my-4">
    <div class="form-group w-50">
        <label for="Name">Nazwa:</label>
        <input asp-for="Name" class="form-control" data-val="true" data-val-required="Pole Nazwa jest wymagane" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group w-50">
        <label for="Price">Cena:</label>
        <input asp-for="Price" class="form-control" type="text" data-val="true" data-val-required="Pole Cena jest wymagane" required pattern="^\d+(\,\d{1,2})?$" title="Podaj liczbę z maksymalnie dwoma miejscami po przecinku" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <button type="submit" class="mt-3 btn btn-primary">Dodaj</button>
</form>
