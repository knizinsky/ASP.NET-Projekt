@model Product

@{
    ViewData["Title"] = "Szczegóły produktu";
}

<h2>@ViewData["Title"]</h2>

<dl class="row">
    <dt class="col-sm-2">Nazwa:</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Cena:</dt>
    <dd class="col-sm-10">@Model.Price</dd>
    <!-- Dodaj inne pola według potrzeb -->
</dl>
<p>
    <a asp-action="Index">Powrót do listy produktów</a>
</p>
