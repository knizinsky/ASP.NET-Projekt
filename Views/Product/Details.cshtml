@model Product

@{
    ViewData["Title"] = "Szczegóły produktu";
}

<h2>@ViewData["Title"]</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered w-50 my-3">
        <tbody>
            <tr>
                <th style="width: 30%;">Nazwa:</th>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <th>Cena:</th>
                <td>@Model.Price zł</td>
            </tr>
        </tbody>
    </table>
</div>

<p>
    <a class="btn btn-secondary" asp-action="Index">Powrót do listy produktów</a>
</p>
